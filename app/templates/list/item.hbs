<div class='list-group-item'>
    <h3 class='list-group-item-heading'>
        {{#if starred}}
            {{fa-icon 'star' spin=savingStar click=(action 'toggleStar')}} {{#link-to 'list.item' model}}{{model.title}}{{/link-to}}
        {{else}}
            {{fa-icon 'star-o' spin=savingStar click=(action 'toggleStar')}} {{#link-to 'list.item' model}}{{model.title}}{{/link-to}}
        {{/if}}
    </h3>
    <p class='list-group-item-text'>
        {{model.description}}
    </p>
    {{#if model.image}}
        <p class='list-group-item-text'>
            <a href='{{model.image}}' target='_blank'>
                {{#if gifV}}
                    <video autoplay='' loop='' muted=''>
                        <source type='video/webm' src='{{gifV}}'>
                    </video>
                {{else}}
                    <img src='{{model.image}}' alt='{{model.title}}'>
                {{/if}}
            </a>
        </p>
    {{/if}}
    {{#if belongsToUser}}
        {{#bs-button action='toggleEdit'}}Edit {{fa-icon 'caret-down'}}{{/bs-button}}
    {{else}}
        <p class='list-group-item-text'>by {{model.user.displayName}}</p>
    {{/if}}
</div>
{{#if ableToEdit}}
<div class='list-group-item active'>
    {{bs-form-element value=model.title placeholder='title'}}
    {{bs-form-element controlType='textarea' value=model.description placeholder='description'}}
    {{bs-form-element value=model.image placeholder='http://image.com/xyz'}}
    {{#bs-button action='update' type='success'}}{{fa-icon 'floppy-o'}}{{/bs-button}}
    {{#bs-button action='delete' type='danger'}}{{fa-icon 'trash'}}{{/bs-button}}
</div>
{{/if}}
