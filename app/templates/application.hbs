<nav class='navbar navbar-default'>
    <div class='container'>
        {{#link-to 'lists' class='navbar-brand'}}List Maker (&beta;eta){{/link-to}}
        {{#if session.isAuthenticated}}
            <ul class='nav navbar-nav'>
                <li>
                {{bs-button
                    action='createList'
                    class='navbar-btn'
                    defaultText='Start new list'
                }}
                </li>
            </ul>
        {{/if}}
        <div class='navbar-right'>
                {{#if session.isAuthenticated}}
                    <p class='navbar-text'>
                        Logged in as {{session.currentUser.displayName}}
                    </p>
                    {{#bs-button action='signOut' type='default' class='navbar-btn'}}
                        Sign out
                    {{/bs-button}}
                {{else}}
                    {{#link-to 'signin' class='navbar-text'}}Sign in{{/link-to}}
                {{/if}}
        </div>
    </div>
</nav>
<div class='container'>
    {{outlet}}
</div>
